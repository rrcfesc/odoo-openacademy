<odoo>
    <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="course_form_view">
        <field name="name">course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="responsible_id" />
                    </group>
                </sheet>
                <notebook>
                    <page string="Description">
                        <field name="description" />
                    </page>
                    <page string="Course">
                        <field name="session_ids" nolabel="1"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="course_list_view">
        <field name="name">course.list</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name" string="Name Tree" />
                <field name="description" />
                <field name="responsible_id" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="course_search_view">
        <field name="name">course.list</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search string="Course Search">
                <field name="name" string="Name Search" />
                <field name="description" />
                <filter name="my_courses" string="MY Courses" domain="[('responsible_id','=',uid)]" />
                <group string="Group By">
                    <filter name="by_responsible" string="Responsible" context="{'group_by':'responsible_id'}" />
                </group>
            </search>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="openacademy.course_list_action">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_my_courses' : 1}"></field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first course</p>
        </field>
    </record>
    <!-- Top menu item -->
    <menuitem name="Open Academy" id="openacademy_menu_root"/>
    <!-- menu categories -->
    <menuitem name="OpenAcademy Menu" id="openacademy.menu_1" parent="openacademy_menu_root"/>
    <menuitem name="Curses" id="openacademy.menu_2"     parent="openacademy.menu_1" action="course_list_action"/>
  </data>
</odoo>